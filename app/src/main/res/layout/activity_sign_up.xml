<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/linear_header"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textFontWeight="800"
                android:textSize="18sp"
                android:text="Verification"
                />
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/toolbar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp"
        android:textSize="14sp"
        android:id="@+id/txt_country"/>

    <EditText
        android:id="@+id/edt_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_country"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:focusable="false"
        android:longClickable="false"
        android:clickable="false"
        android:paddingLeft="20dp"
        android:text="" />

    <EditText
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/edt_country"
        android:paddingTop="10dp"
        android:focusable="false"
        android:longClickable="false"
        android:text=""
        android:id="@+id/edt_dialCode"
        android:layout_below="@id/txt_phoneNumber"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_country"
        android:id="@+id/txt_phoneNumber"
        android:text="Phone Number"
        android:textColor="@color/colorAccent"
        android:layout_alignLeft="@id/edt_phoneNumber"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_phoneNumber"
        android:id="@+id/edt_phoneNumber"
        android:inputType="phone"
        android:maxLength="10"
        android:textColorHighlight="@color/colorAccent"
        android:singleLine="true"
        android:layout_toRightOf="@id/edt_dialCode"
        android:layout_alignRight="@id/edt_country"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_phoneNumber"
        android:layout_marginTop="50dp"
        android:layout_alignLeft="@id/edt_country"
        android:layout_alignRight="@id/edt_country"
        android:background="@color/colorAccent"
        android:textAllCaps="false"
        android:id="@+id/btn_continue"
        android:text="Continue"/>

</RelativeLayout>